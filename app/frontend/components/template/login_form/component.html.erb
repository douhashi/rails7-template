<section class="w-full flex items-center justify-center">
  <div class="flex flex-col w-full max-w-md px-4 py-8 sm:px-6 md:px-8 lg:px-10">
    <div class="self-center mb-6">
      <%= component 'ui/headings/h1', title: 'Login to your account', size: 'text-xl' %>
    </div>

    <div class="flex gap-4 item-center">
      <%= component 'ui/link_button', label: 'Sign in with Google', url: '#', icon: 'fab fa-google', wide: true %>
    </div>

    <div class="mt-8">
      <%= form_with url: '#' do |f| %>
        <div class="flex flex-col mb-2">
          <%= component 'ui/form/field_with_icon',
            form: f,
            method: :field,
            icon: 'fas fa-envelope',
            field_type: :email_field,
            html_options: { required: true, placeholder: 'Email' } %>
        </div>

        <div class="flex flex-col mb-6">
          <%= component 'ui/form/field_with_icon',
            form: f,
            method: :field,
            icon: 'fas fa-lock',
            field_type: :password_field,
            html_options: { required: true, placeholder: 'Password' } %>
        </div>

        <div class="flex items-center mb-6 -mt-4">
          <div class="flex ml-auto">
            <%= component 'ui/link', text: 'Forgot Your Password?', url: '#', size: 'xs', weight: 'light' %>
          </div>
        </div>

        <div class="flex w-full">
          <%= component 'ui/form/button', label: 'Login', wide: true %>
        </div>

      <% end %>
    </div>

    <div class="flex items-center justify-center mt-6">
      <%= component 'ui/link', text: "Don't have an account?", url: '#', size: 'xs', weight: 'light' %>
    </div>
  </div>

</section>
