<% options.reverse_merge! class: "text-gray-700 dark:text-white" %>

<div class="relative flex items-center">
  <div>
    <%= form.label method, **options %>
  </div>

  <% if options[:required] %>
    <div class="ml-1">
      <span class="text-xs text-red-500"><i class="fas fa-asterisk"></i></span>
    </div>
  <% end %>
</div>
